#!/bin/sh

set -e

# Clone the Git sources of mugenhwcfg placing them in /home/src, and ensure
# this directory will be owned by the live user.
mkdir -p /opt
git clone -b devel --depth=1 \
    http://git.codelabs.ch/git/muen/mugenhwcfg.git \
    /opt/mugenhwcfg
cd /opt/mugenhwcfg && git submodule update --init --depth=1
